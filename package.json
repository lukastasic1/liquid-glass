{
  "name": "@nkzw/liquid-glass",
  "version": "1.3.0",
  "description": "Apple's Liquid Glass effect for React",
  "keywords": [
    "react",
    "component",
    "library",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nkzw-tech/liquid-glass"
  },
  "license": "MIT",
  "author": {
    "name": "Christoph Nakazawa",
    "email": "christoph.pojer@gmail.com"
  },
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "mkdir -p lib && tsdown src/index.tsx -d lib --target=node22 --format=esm --clean --dts",
    "dev": "cd liquid-glass-example && pnpm dev",
    "format": "prettier --experimental-cli --write .",
    "lint": "eslint --cache .",
    "lint:format": "prettier --experimental-cli --cache --check .",
    "test": "npm-run-all --parallel tsc:check lint lint:format",
    "tsc:check": "tsc"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@nkzw/eslint-config": "^3.0.2",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
